<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="texto">
        <item name="android:textSize">@dimen/texto_normal</item>
    </style>
    <style name="cuadro_texto_l">
        <item name="android:layout_width">@dimen/largo_texto_l</item>
        <item name="android:layout_height">@dimen/alto_texto_l</item>
        <item name="android:textSize">@dimen/texto_normal</item>
        <item name="android:background">@android:drawable/editbox_background</item>
        <item name="android:lines" >1</item>

    </style>
    <style name="base_conectada">
        <item name="android:layout_width">@dimen/largo_texto_l</item>
        <item name="android:layout_height">@dimen/alto_texto_l</item>
        <item name = "android:textSize">@dimen/texto_grande</item>
        <item name = "android:visibility">invisible</item>

    </style>
    <style name="cuadro_texto_c">
        <item name="android:layout_width">@dimen/largo_texto_c</item>
        <item name="android:layout_height">@dimen/alto_texto_c</item>
        <item name="android:textSize">@dimen/texto_normal</item>
        <item name="android:background">@android:drawable/editbox_background</item>
        <item name="android:lines">1</item>
        <item name="android:text"> </item>
    </style>
    <style name="grafico">
        <item name="android:layout_width">@dimen/cuadro_grafico</item>
        <item name="android:layout_height">@dimen/cuadro_grafico</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/padding_grafico</item>
    </style>
    <style name="etiqueta">
        <item name="android:layout_width">@dimen/largo_etiqueta</item>
        <item name="android:layout_height">@dimen/alto_etiqueta</item>
    </style>
    <style name="boton_cabeza">
        <item name="android:layout_width">@dimen/boton_cuadrado</item>
        <item name="android:layout_height">@dimen/boton_cuadrado_mitad</item>
        <item name ="android:textAllCaps">false</item>

    </style>
    <style name="boton">
        <item name="android:layout_width">@dimen/largo_boton</item>
        <item name="android:layout_height">@dimen/alto_boton</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_boton</item>
    </style>


</resources>